    "lint": "eslint src --ext=.js,.jsx,.ts,.tsx --fix",
    "lint:ci": "eslint src --ext=.js,.jsx,.ts,.tsx",
    "format": "prettier \"src/**/*.{js,jsx,ts,tsx}\" --write",
    "format:ci": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
